---
import MainHeadLayout from "./MainHeadLayout.astro";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

interface Props {
	title: String;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<MainHeadLayout {title} />
	<body>
		<Nav />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
